{% extends '@App/layouts/base.html.twig' %}


{% block body %}

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Data Table</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>â„–</th>
                                    <th>User </th>
                                    <th>Full Name</th>
                                    <th>Role</th>
                                    <th>Contact e-mail</th>
                                    <th>Registration date</th>
                                    <th>User Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.fullname }}</td>
                                            {% if (user.role == 'ROLE_SUPER_ADMIN') %}
                                                 <td> Admin </td>
                                            {% elseif (user.role == 'ROLE_MODERATOR') %}
                                                 <td> Moderator </td>
                                            {% elseif (user.role == 'ROLE_USER') %}
                                                    <td> User </td>
                                             {% endif %}
                                            <td>{{ user.email }}</td>
                                            <td>{{ user.registrationDate|date("Y-m-d h:m:s") }}</td>
                                            <td>
                                            <a class="btn btn-primary btn-block" href="{{ path('user.edit', {id: user.id}) }}"> Edit</a>
                                            {#<a class="btn btn-danger btn-block"#}
                                            {#href="{{ url('delete-user', {'user': user.id}) }}"> Delete</a>#}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->


{% endblock %}
